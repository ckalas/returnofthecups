CFLAGS = -c -Wall
CFLAGS +=  $(shell pkg-config --cflags opencv)
LIBS = $(shell pkg-config --libs opencv)

all: trackbar vid_cap
	./vid_cap

trackbar: trackbar.o
	g++ trackbar.o -o trackbar  $(LIBS)

trackbar.o : trackbar.cpp
	g++ $(CFLAGS) trackbar.cpp

vid_cap: vid_cap.cpp
	g++ vid_cap.cpp -o vid_cap $(shell pkg-config --cflags --libs opencv)


clean:
	rm vid_cap trackbar *.o *~
